<% content_for :title do %>
 Log In | RelyApply
<% end %>

<div class="container" id=loginContainer>
  <div class="d-flex justify-content-center h-100" >
    <div class="card">
        <div class="card-header">
          <h3>Log In</h3>
        <small style="color:white">You agree to our <%= link_to 'Terms of Use', tos_path %> and <%= link_to 'Privacy and Cookie Policy', privacy_path %> by continuing.</small>
          <%#Omniauth Logins %>
          <div class="d-flex justify-content-end social_icon">
          </div>
        </div>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <%# Email Input %>
            <div class="input-group form-group">
                <div class="input-group-prepend">
                  <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                </div>
              <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder: "Email",:class => 'form-control' %>
            </div>
            <%# PW Input %>
            <div class="input-group form-group">
                <div class="input-group-prepend">
                  <span class="input-group-text"><i class="fas fa-key"></i></span>
                </div>
              <%= f.password_field :password, autocomplete: "current-password",placeholder: "Password", :class => 'form-control' %>
            </div>
            <%# Remember Me Checkbox %>
            <div class="row align-items-center remember">
              <% if devise_mapping.rememberable? -%>
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              <% end -%>
            </div>
            <%# Submit Button %>
            <div class="form-group" id=loginBttn>
              <%= f.submit %>
              <%= invisible_recaptcha_tags text: 'Log In',class: "btn login_btn" %>
            </div>
          <% end %>
          <div class="form-group col-12" style="color:white;">
            <hr>
          </div>
      <%# Google %>
        <%= link_to user_google_oauth2_omniauth_authorize_path, class: "btn btn-block btn-social btn-reddit", id: "googleSignIn" do %>
          <span><%= image_tag('google_logo.png', alt: 'Google', id: 'google_logo') %></span> Sign in with Google
        <% end %>
        <%# Facebook %>
        <%= link_to user_facebook_omniauth_authorize_path, class: "btn btn-block btn-social btn-facebook", id: "fbSignIn" do %>
          <span><i class="fab fa-facebook-square"></i></span>  Sign in with Facebook
        <% end %>
        </div>
        <div class="card-footer">
          <%# Sign Up Link %>
          <div class="d-flex justify-content-center links">
              Don't have an account?<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
             <%= link_to "Sign up", new_registration_path(resource_name) %><br />
              <% end -%>
          </div>
          <%#Forgot PW Link%>
          <div class="d-flex justify-content-center">
            <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
            <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
            <% end -%>
          </div>
          <div class="d-flex justify-content-center">
            <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
              <%= link_to 'Resend confirmation email?', new_user_confirmation_path %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<br>

