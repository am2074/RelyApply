<% content_for :title do %>
 Log In | RelyApply
<% end %>
<div class="container" id=loginContainer>
  <div class="d-flex justify-content-center h-100" >
    <div class="card">
        <div class="card-header">
          <h3>Log In</h3>
        <small style="color:white">You agree to our <%= link_to 'Terms of Use', tos_path %> and <%= link_to 'Privacy Policy', privacy_path %> by continuing</small>
          
          <%#Omniauth Logins %>
          <div class="d-flex justify-content-end social_icon">
            <%# Facebook %>
            <%= link_to user_facebook_omniauth_authorize_path do %>
              <span><i class="fab fa-facebook-square"></i></span>
            <% end %>
            <%# Google %>
          </div>
        </div>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <%# Email Input %>
            <div class="input-group form-group">
                <div class="input-group-prepend">
                  <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                </div>
              <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder: "Email",:class => 'form-control' %>
            </div>
            <%# PW Input %>
            <div class="input-group form-group">
                <div class="input-group-prepend">
                  <span class="input-group-text"><i class="fas fa-key"></i></span>
                </div>
              <%= f.password_field :password, autocomplete: "current-password",placeholder: "Password", :class => 'form-control' %>
            </div>
            <%# Remember Me Checkbox %>
            <div class="row align-items-center remember">
              <% if devise_mapping.rememberable? -%>
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              <% end -%>
            </div>
            <%# Submit Button %>
            <div class="form-group" id=loginBttn>
              <%= f.submit "Log in",class: "btn login_btn"%>
            </div>
          <% end %>
        </div>
        <div class="card-footer">
          <%# Sign Up Link %>
          <div class="d-flex justify-content-center links">
              Don't have an account?<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
             <%= link_to "Sign up", new_registration_path(resource_name) %><br />
              <% end -%>
          </div>
          <%#Forgot PW Link%>
          <div class="d-flex justify-content-center">
            <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
            <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
            <% end -%>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>



