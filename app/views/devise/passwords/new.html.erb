<% content_for :title do %>
Forgot Password | RelyApply
<% end %>

<div class="container" id=loginContainer>
  <div class="d-flex justify-content-center h-100" >
    <div class="card">
        <div class="card-header">
          <h3><u>Forgot Your Password?</u></h3><br />
          <p style="color:white">Please type your email so we can send you instruction to reset your password</p>
          <em style="color:white">
          <%= devise_error_messages! %>
          </em>
        </div>
        <div class="card-body">
         <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <%# Email Input %>
            <div class="input-group form-group">
                <div class="input-group-prepend">
                  <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                </div>
              <%= f.email_field :email, autofocus: true, class: "form-control", required: true, placeholder: "Email",  autocomplete: "email"  %>
            </div>
            <%# Submit Button %>
             <div class="form-group" id=loginBttn>
              <%= invisible_recaptcha_tags text: 'Send',class: "btn login_btn" %>
            </div>
          <% end %>
        </div>
        <div class="card-footer">
          <%# Sign Up Link %>
          <div class="d-flex justify-content-center links">
              Already signed in?
              <%- if controller_name != 'sessions' %>
                <%= link_to "Log in", new_session_path(resource_name) %><br />
              <% end -%>
          </div>
          <div class="d-flex justify-content-center links">
              Don't have an account?<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
             <%= link_to "Sign up", new_registration_path(resource_name) %><br />
              <% end -%>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


<br>
