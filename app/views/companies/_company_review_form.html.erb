<%# Review Submission Form%> 
<div>

  <% if user_signed_in? %>
      <%= simple_form_for [@company, Review.new] do |f| %>
         <br />
          <div class="alert alert-info" role="alert">
            <u><strong>Reminder:</strong></u>
              <ul>
                 <li><p><strong><I>Response Times</I> are the estimated time it takes to hear back for scheduling an interview or rejection</strong></p></li>
              </ul>
          </div>

          <br />
          
          <p><I>**Required**</I></p>
          <div class="row">
            <div class="col-md-6">
              <%= f.label :responsiveness do %>
                Did you feel that this company was responsive within a reasonable time frame? 
                *Non-responsive: If you did not qualify for the job and they didn't bother following up within a reasonable time frame.* 
              <%end %>
            </div>
            <div class="col-md-6">
           <%= f.collection_radio_buttons :responsiveness [['Yes', 'Yes'] ,['No', 'No']],:first, :last,:item_wrapper_class => 'vertical', :id =>"radioButton" %>
            </div>
          </div> 

          <div class="row">
            <div class="col-md-6">
              <%= f.label :response_time do %>
                Your Estimated Response Time for an Interview or Rejection:
              <%end %>
            </div>
            <div class="col-md-6">
            <%= f.select(:response_time, options_for_select([
            ["1 week ","1 week"],
            ["2 Weeks", "2 Weeks"],
            ["3 Weeks", "3 Weeks"],
            ["4 Weeks", "4 Weeks"],
            ["Greater than 4 Weeks", "Greater than 4 Weeks"]], 
            params[:response_time]),prompt: '--Select--' , class:"select") %> 
            </div>
          </div> 

          <div class="row">
            <div class="col-md-6">
              <%= f.label :satisfaction do %>
               Satisfaction With Response Time:<span class="required"></span>
              <% end %>
            </div>
            <div class="col-md-6">
            <%= f.collection_radio_buttons :satisfaction, [['Positive', 'Positive'] ,['Negative', 'Negative']],:first, :last,:item_wrapper_class => 'vertical', :id =>"radioButton" %>
            </div>
          </div>

            </div>
          <div class="row">
            <div class="col-md-6">
              <%= f.label :application_type do%>
                Application Type:
              <% end %>
            </div>
            <div class="col-md-6">
              <%= f.select(:application_type, options_for_select([
              ["Online","Online"],
              ["In-person", "In-person"],
              ["Referral", "Referral"]], 
              params[:application_type] ),prompt: '--Select--' , class:"select") %> 
            </div>
          </div>

          <br />
          
          <p><I>**Optional**</I></p>
          
          <div class="row">
            <div class="col-md-6">
              <%= f.label :position do%>
                Position:
              <% end %>
            </div>
            <div class="col-md-6">
              <%= h  f.text_field :position %>
            </div>
          </div>

          

          <div class="row">
            <div class="col-md-6">
              <%= f.label :employment_type do%>
                Employment Type: 
              <% end %>
            </div>
            <div class="col-md-6">
              <%= f.select(:employment_type, options_for_select([
                ["Full-Time","Full-Time"],["Part-Time","Part-Time"],
                ["Intern","Intern"],["Temporary","Temporary"],
                ["Contractor","Contractor"]], params[:employment_type] ),prompt: '--Select--' , class:"select") %>
            </div>
          </div>

          <div class="row">
            <div class="col-md-6">
              <%= f.label 'Address' do %>
                Full Address: 
              <% end %>
            </div>
            <div class="col-md-6">
              <%= h f.text_field :address, :size=>"33", placeholder: "Type address here to auto-fill fields below...", id: :autocomplete_address %>
            </div>
          </div>   
        
          <div class="row">
            <div class="col-md-6">
              <%= f.label 'Street' %>
            </div>
            <div class="col-md-6">
              <%= f.text_field :street_number, id: :street_number, readonly: true%>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6">
              <%= f.label 'Route' %>
            </div>
            <div class="col-md-6">
              <%= f.text_field :route, id: :route, readonly: true %>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6">
              <%= f.label 'City' %>
            </div>
            <div class="col-md-6">
              <%= f.text_field :locality, id: :locality, readonly: true %>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6">
              <%= f.label 'State' %>
            </div>
            <div class="col-md-6">
              <%= f.text_field :administrative_area_level_1, id: :administrative_area_level_1, readonly: true%>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6">
              <%= f.label 'Zip Code' %>
            </div>
            <div class="col-md-6">
              <%= f.number_field :postal_code, id: :postal_code,readonly: true %>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6">
              <%= f.label 'Country' %>
            </div>
            <div class="col-md-6">
              <%= f.text_field :country, id: :country,readonly: true %>
            </div>
          </div>

            <br />

        
        <div align="center">
              <%= f.button :submit, 'Create Review', :class => "btn btn-primary", data: { confirm: "Is the information you provided correct?" } %>
        </div>
      <% end %>

    
  <% else %>
    <div>
      
      <h6> You need to <%= link_to "Log in", new_user_session_path %> or <%= link_to "Sign up", new_user_registration_path %> to submit a review 
      </h6>
    </div>
  
  <% end %>
</div>