        <div class="input-group-append">
          <%=button_tag( :class => "btn btn-lg btn-default",  id: "navBarSearchButton") do %>
            <i class="fas fa-search"></i>
          <% end %>
        </div>
      </div>
    <% end %> 
  </div>    
</div>