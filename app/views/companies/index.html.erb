<% content_for :title do %>
      RelyApply
<% end %>

<div class="jumbotron jumbotron-fluid" id="jumbotronHome">
  <h1 class="display-4" style="text-align: center;">Know When You'll Hear Back</h1>
</div>
<div class= "container-fluid" id="test">
  <div class="col-12">
    <%= form_tag(search_companies_path, method: :get, local: true ) do %>
      <div class="input-group input-group-lg" id="mainSearchBar">
