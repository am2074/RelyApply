<div class="well" id="reviewForm">
<%= simple_form_for [@review] do |f| %>
  <% if review.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(review.errors.count, "error") %> prohibited this review from being saved:</h2>

      <ul>
      <% review.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <h3><strong>Company:</strong> <%= @review.company.name %></h3>
  </div>
  <div class="alert alert-info" role="alert">
    <u><strong>Reminder:</strong></u>
        <ul>
          <li>
              <p><strong><I>Response Times</I> are the estimated time it takes to hear back for scheduling an interview or rejection</strong></p>
          </li>
        </ul>
  </div>
  
  <div class="field">
    <%= f.label :response_time do%>
      Response Time for an Interview or Rejection:
    <%end %>
    <br />
    <%= f.select :response_time, options_for_select([["1 week","1 week"],["2 weeks","2 weeks"],["3 weeks","3 weeks"],["Greater than 4 weeks","Greater than 4 weeks"]], :selected => @review.response_time), class:"select"%> 
  </div> 

  <br />

  <div class="field">
    <%= f.label :application_type %>
    <br />
    <%= f.select(:application_type, options_for_select([["In Person","In Person"],["Online","Online"],["Referral","Referral"]], :selected => @review.application_type), class:"select") %> 
  </div>

  <br />

  <div>
    <%= f.label :satisfaction do %>
     Level of Satisfaction With Response Time:<span class="required"></span>
    <% end %>
    <br />
    <%= f.select :satisfaction, options_for_select([["Highly satisfied. Expectations were surpassed","Highly satisfied. Expectations were surpassed"],["Average Satisfaction","Average Satisfaction"],["Poor Satisfaction","Poor Satisfaction"]], :selected => @review.satisfaction), class:"select"%> 
  </div>

  <br />
  
  <p><I>**Optional**</I></p>
    
  <div class="field">
    <%= f.label :position %>
    <br />
    <%= f.text_field :position %>
  </div>

  <br />

  <div class="field">
    <%= f.label :employment_type %>
    <br />
    <%= f.select(:employment_type, options_for_select([["Full-Time","Full-Time"],["Part-Time","Part-Time"],["Intern","Intern"],["Temporary","Temporary"],["Contractor","Contractor"]],:selected => @review.employment_type),:include_blank => true, class:"select") %>
  </div>
    
  <br />

  <div class="field">
    <%= f.label 'Address' %>
    <br />
    <%= f.text_field :address,  :size=>"80", placeholder: "Type address", id: :autocomplete_address %>
  </div>

  <br />
  
      <div class="comments_wrapper clearfix">
          <div class="pull-left">
            <div class="field">
              <%= f.label 'Street' %>
              <%= f.text_field :street_number, id: :street_number, readonly: true%>
              <%= f.label 'Route' %>
              <%= f.text_field :route, id: :route, readonly: true %>
              <%= f.label 'City' %>
              <%= f.text_field :locality, id: :locality, readonly: true %>
              <%= f.label 'State' %>
              <%= f.text_field :administrative_area_level_1, id: :administrative_area_level_1, readonly: true%>
            </div>
          </div>

          <div class="pull-left">
            <div class="field">
              <%= f.label 'Zip Code' %>
              <%= f.number_field :postal_code, id: :postal_code,readonly: true %>
              <%= f.label 'Country' %>
              <%= f.text_field :country, id: :country,readonly: true %>
            </div>

            <br />

          </div>
        </div> 
        <div align="center">
          <%= f.button :submit, :class => "btn btn-primary", data: { confirm: "Is the information you provided correct?" } %>
        </div>
  </div>      

  
<% end %>
</div>